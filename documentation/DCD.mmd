---
config:
  theme: dark
  look: classic
  layout: dagre
title: DCD
---
classDiagram
direction TB
    class Activity {
	    +UID UID
	    +string Name
    }

    class Workshop {
        +UID UID
	    +string Name
	    +datetime ExpectedTime
    }

    class Box {
	    +UID UID
	    +string Name
    }
    class Material {
	    +UID UID
	    +string Name
	    +string Discription
	    +string Number
    }
    class MaterialRepository {
        +DoNameExist(string)::bool
    }
    class BoxRepository {
        +DoNameExist(string)::bool
    }
    class WorkshopRepository {
        +DoNameExist(string)::bool
    }
    class ActivityRepository {
        +DoNameExist(string)::bool
    }
    class IUidGenerateAble {
	    +GenerateUid() :string
	    -ValidateUidIsUniq() :bool
    }
    class UidGenerate {
	    +GenerateUid() :string
	    -ValidateUidIsUniq() :bool
    }
    class Repository~T~ {
	    +-List~T~ Items
	    +Add(T) :void
	    +Update(T) :void
	    +Remove(T) :void
	    +GetByName(string) :T
	    +GetByUid(string) :T
    }

	<<interface>> IUidGenerateAble
    <<abstract>> UidGenerate
	<<template>> Repository

    Material "1" --* "0..*" MaterialRepository : "have"
    MaterialRepository ..|> Repository : "implement"
    Box "0..*" -- "0..*" Material : "have"
    Box "0..*" --* "1" BoxRepository : "have"
    BoxRepository ..|> Repository : "implement"
    Workshop "1" -- "0..*" WorkshopRepository : "have"
    WorkshopRepository ..|> Repository : "implement"
    Activity -- Workshop
    ActivityRepository ..|> Repository : "implement"
    Workshop -- Box : "have"
    Activity --* ActivityRepository : "have"
    Repository --|> UidGenerate : "is"
    UidGenerate --|> IUidGenerateAble : "is"
